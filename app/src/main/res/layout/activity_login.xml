<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jobresearch.controller.jobsresearch.LoginActivity"
    android:background="@drawable/bgjr"
    >


    <LinearLayout
        android:paddingTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btnInscription"
            android:textColor="#fff"
            android:background="@color/colorMint"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:text="@string/inscription"
            android:layout_height="60dp"

            android:onClick="inscription_Click"
            />

        <Button

            android:textColor="#fff"
            android:background="@color/colorMint"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:text="CONNEXION"
            android:layout_height="wrap_content"
            android:onClick="connexion_Click"

            />

    </LinearLayout>


</RelativeLayout>
